<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-57dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="@color/black"
                android:padding="5dp">

                <View
                    android:id="@+id/lineAustria1"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/red_line"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/white_line"
                    app:layout_constraintBottom_toTopOf="@+id/lineAustria2"
                    app:layout_constraintTop_toBottomOf="@+id/lineAustria1" />

                <View
                    android:id="@+id/lineAustria2"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/red_line"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="@color/black"
                android:padding="5dp">

                <View
                    android:id="@+id/linePoland1"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:background="@color/white"
                    app:layout_constraintBottom_toTopOf="@+id/linePoland2"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="5dp" />

                <View
                    android:id="@+id/linePoland2"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:background="@color/red_line"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="@color/black"
                android:padding="5dp"
                >

                <View
                    android:id="@+id/lineColumb1"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:background="@color/yellow_line"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:background="@color/blue_line"
                    app:layout_constraintBottom_toTopOf="@+id/lineColumb2"
                    app:layout_constraintTop_toBottomOf="@+id/lineColumb1" />

                <View
                    android:id="@+id/lineColumb2"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/red_line"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="@color/black"
                android:padding="5dp"
                >

                <View
                    android:id="@+id/lineItalic1"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:background="@color/greene_line"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <View
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    app:layout_constraintStart_toEndOf="@+id/lineItalic1"
                    app:layout_constraintTop_toBottomOf="@+id/lineItalic1"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/lineItalic2"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:background="@color/red_line"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="@color/black"
                android:padding="5dp"
                >

                <View
                    android:id="@+id/lineMadagasc1"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:background="@color/red_line"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/lineMadagasc2"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:background="@color/greene_line"
                    app:layout_constraintBottom_toBottomOf="parent" />
                <View
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:background="@color/white_line"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="@color/black"
                android:padding="5dp"
                >

                <View
                    android:id="@+id/lineTail1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/red_line"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="5dp" />

                <View
                    android:id="@+id/lineTail2"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/blue_line"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="@color/black"
                android:padding="5dp"
                >

                <View
                    android:id="@+id/lineDan1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/red_line"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@color/white_line"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.303"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/lineDan2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="84dp"
                    android:background="@color/white_line"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:layout_editor_absoluteX="5dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="210dp"
                android:layout_height="210dp"
                android:background="@color/black"
                android:padding="5dp"
                >

                <View
                    android:id="@+id/lineShw1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/red_line"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="42dp"
                    android:layout_height="104dp"
                    android:background="@color/white_line"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <View
                    android:id="@+id/lineShw2"
                    android:layout_width="104dp"
                    android:layout_height="42dp"
                    android:background="@color/white_line"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                   />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>